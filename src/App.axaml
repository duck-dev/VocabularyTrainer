<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VocabularyTrainer"
             x:Class="VocabularyTrainer.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Light"/>
        <StyleInclude Source="/src/Styles/MainStyle.axaml"/>
    </Application.Styles>
    
    <Application.Resources>
        <SolidColorBrush x:Key="BorderGrey" Color="#808080"/>
        <SolidColorBrush x:Key="LightMainBackground" Color="#D8DDE6"/>
        <SolidColorBrush x:Key="AppBlue" Color="#5F8BB0"/>
        <SolidColorBrush x:Key="FullyTransparent" Color="#0000FFFF"/>
    </Application.Resources>
</Application>
