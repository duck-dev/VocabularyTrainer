<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
        <Style Selector="TextBox.add-page-textbox">
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Height" Value="60"/>
                <Setter Property="SelectionBrush" Value="{StaticResource AppBlue}"/>
                <Setter Property="BorderBrush" Value="{StaticResource AppBlue}"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="AcceptsReturn" Value="False"/>
                <Setter Property="AcceptsTab" Value="False"/>
                <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>
        
        <Style Selector="StackPanel.words-parent-panel">
                
        </Style>
        
        <Style Selector="Panel.word-item-panel">
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Height" Value="70"/>
                <Setter Property="Margin" Value="0,20"/>
        </Style>
        
        <Style Selector="Button.add-word-button">
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Height" Value="75"/>
                <Setter Property="Margin" Value="0,15"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderGrey}"/>
                <Setter Property="Background" Value="{StaticResource FullyTransparent}"/>
